name: Deploy iOS

on:
  push:
    branches:
      - main
      - release/*
  pull_request:
    branches:
      - main
  workflow_dispatch:
    inputs:
      environment:
        description: "Deployment environment (beta or production)"
        required: true
        default: "beta"
        type: choice
        options:
          - beta
          - production

jobs:
  build-and-deploy:
    runs-on: macos-latest
    timeout-minutes: 45

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Setup Flutter
        uses: subosito/flutter-action@v2
        with:
          channel: "stable"
          cache: true

      - name: Install Melos & Bootstrap
        run: dart pub global activate melos && melos bootstrap

      - name: Create .env files (dev / qa / prod)
        run: |
          cat > apps/client-app/.env.dev << EOF
          API_KEY=${{ secrets.DEV_API_KEY }}
          BASE_URL=${{ secrets.DEV_BASE_URL || 'https://restcountries.com/v3.1' }}
          EOF
          cat > apps/client-app/.env.qa << EOF
          API_KEY=${{ secrets.QA_API_KEY }}
          BASE_URL=${{ secrets.QA_BASE_URL || 'https://restcountries.com/v3.1' }}
          EOF
          cat > apps/client-app/.env.prod << EOF
          API_KEY=${{ secrets.PROD_API_KEY }}
          BASE_URL=${{ secrets.PROD_BASE_URL || 'https://restcountries.com/v3.1' }}
          EOF

      - name: Run code generation
        run: melos run build:all

      - name: Determine flavor
        id: flavor
        run: |
          if [[ "${{ github.ref }}" == refs/heads/develop ]]; then
            echo "flavor=dev" >> $GITHUB_OUTPUT
          elif [[ "${{ github.ref }}" == refs/heads/main ]]; then
            echo "flavor=qa" >> $GITHUB_OUTPUT
          elif [[ "${{ github.ref }}" == refs/heads/release/* || "${{ github.ref }}" == refs/tags/v* ]]; then
            echo "flavor=prod" >> $GITHUB_OUTPUT
          else
            echo "flavor=dev" >> $GITHUB_OUTPUT
          fi

      - name: Run tests
        run: melos run test

      - name: Setup Ruby
        if: github.event_name != 'pull_request'
        uses: ruby/setup-ruby@v1
        with:
          ruby-version: "3.2"
          bundler-cache: true
          working-directory: ios

      - name: Install Fastlane
        if: github.event_name != 'pull_request'
        run: |
          cd ios
          gem install bundler
          bundle install

      - name: Setup certificates and provisioning profiles
        if: github.event_name != 'pull_request'
        env:
          MATCH_PASSWORD: ${{ secrets.MATCH_PASSWORD }}
          MATCH_GIT_BASIC_AUTHORIZATION: ${{ secrets.MATCH_GIT_BASIC_AUTHORIZATION }}
          FASTLANE_USER: ${{ secrets.FASTLANE_USER }}
          FASTLANE_PASSWORD: ${{ secrets.FASTLANE_PASSWORD }}
          FASTLANE_APPLE_APPLICATION_SPECIFIC_PASSWORD: ${{ secrets.FASTLANE_APPLE_APPLICATION_SPECIFIC_PASSWORD }}
          FASTLANE_SESSION: ${{ secrets.FASTLANE_SESSION }}
        run: |
          cd ios
          bundle exec fastlane match appstore --readonly

      - name: Determine deployment environment
        id: environment
        run: |
          if [ "${{ github.event_name }}" = "workflow_dispatch" ]; then
            echo "environment=${{ github.event.inputs.environment }}" >> $GITHUB_OUTPUT
          elif [[ "${{ github.ref }}" == refs/heads/release/* || "${{ github.ref }}" == refs/tags/v* ]]; then
            echo "environment=production" >> $GITHUB_OUTPUT
          elif [[ "${{ github.ref }}" == refs/heads/main ]]; then
            echo "environment=beta" >> $GITHUB_OUTPUT
          else
            echo "environment=beta" >> $GITHUB_OUTPUT
          fi

      - name: Deploy to TestFlight/App Store
        if: github.event_name != 'pull_request'
        env:
          BUILD_NUMBER: ${{ github.run_number }}
          FLUTTER_FLAVOR: ${{ steps.flavor.outputs.flavor }}
          MATCH_PASSWORD: ${{ secrets.MATCH_PASSWORD }}
          MATCH_GIT_BASIC_AUTHORIZATION: ${{ secrets.MATCH_GIT_BASIC_AUTHORIZATION }}
          FASTLANE_USER: ${{ secrets.FASTLANE_USER }}
          FASTLANE_PASSWORD: ${{ secrets.FASTLANE_PASSWORD }}
          FASTLANE_APPLE_APPLICATION_SPECIFIC_PASSWORD: ${{ secrets.FASTLANE_APPLE_APPLICATION_SPECIFIC_PASSWORD }}
          FASTLANE_SESSION: ${{ secrets.FASTLANE_SESSION }}
          APP_STORE_CONNECT_API_KEY_ID: ${{ secrets.APP_STORE_CONNECT_API_KEY_ID }}
          APP_STORE_CONNECT_API_ISSUER_ID: ${{ secrets.APP_STORE_CONNECT_API_ISSUER_ID }}
          APP_STORE_CONNECT_API_KEY: ${{ secrets.APP_STORE_CONNECT_API_KEY }}
        run: |
          cd apps/client-app/ios
          bundle exec fastlane ${{ steps.environment.outputs.environment }}

      - name: Build IPA for artifact
        if: github.event_name == 'pull_request'
        run: |
          cd apps/client-app && flutter build ios --release --no-codesign --dart-define=FLAVOR=${{ steps.flavor.outputs.flavor }}

      - name: Upload IPA artifact
        if: github.event_name == 'pull_request'
        uses: actions/upload-artifact@v4
        with:
          name: ios-app-${{ steps.flavor.outputs.flavor }}
          path: build/ios/iphoneos/Runner.app
          retention-days: 7
